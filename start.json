{
  "daemon": true,
  "run": [{
    "method": "shell.run",
    "params": {
      "venv": "env",
      "path": "app",
      "message": "python entry_with_update.py {{input.flags}}",
      "on": [{ "event": "/http:\/\/[0-9.:]+/", "done": true }]
    }
  }, {
    "method": "local.set",
    "params": { "url": "{{input.event[0]}}" }
  }, {
    "method": "tab.open",
    "params": {
      "target": "{{local.url}}",
      "url": "{{local.url}}"
    }
  }, {
    "method": "proxy.start",
    "params": {
      "name": "app",
      "uri": "{{local.url}}"
    }
  }]
}
